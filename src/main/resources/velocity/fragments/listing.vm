<div class="listing" >
    <a href="/listing/$listing.getLID()">
    <div class="listing-header">$!listing.getUser().getFname() - ($!listing.getUser().getEmail())</div>
    <div class="listing-content">
        <div class="listing-side">
            <h3 class="listing-text">$$!listing.getRent()</h3>
            <h3 class="listing-text">$!listing.getPayment_frequency().getTo_str()</h3>
            <h3 class="listing-text">$!listing.getGender().getTo_str()</h3>
            <h3 class="listing-text">$!listing.getHousingType().getTo_str()</h3>
            <h3 class="listing-text">$!listing.getIsFurnished().getTo_str()</h3>
        </div>
        <div class="listing-body">
            <div class="description-text">
                $!listing.getDesc()
            </div>
        </div>
    </div>
    </a>
    <div class="listing-controls">
        #if($!loggedin && $!listing.getUser().checkIfSameUser($currentuser))
                <a href="/listing/$listing.getLID()/remove">Remove</a>

                <a href="/listing/$listing.getLID()/edit">Edit</a>
        #end
    </div>
    ##<h3 class="listing-text rent-text">$listing.getGender()</h3>
</div>