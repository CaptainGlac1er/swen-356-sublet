#@mainLayout()

<h3 class="form-title">Create a new User</h3>
<form class="listing-form" action='' method="post">
    <div class="form-group">
        <input class="form-input form-control" placeholder="First Name" name="fname" type="text">
    </div>
    <div class="form-group">
        <input class="form-input form-control" placeholder="Last Name" name="lname" type="text">
    </div>
    <div class="form-group">
        <input class="form-input form-control" placeholder="Username" name="username" type="text">
    </div>
    <div class="form-group">
        <input class="form-input form-control" placeholder="Email" name="email" type="text">
    </div>
    <div class="form-group">
        <input class="form-input form-control" placeholder="Password" name="password" type="password">
    </div>
    <div class="form-group">
        <input class="form-input form-control" placeholder="Confirm Password" name="confirmpassword" type="password">
    </div>
    <div class="form-group">
        <input class="form-input form-control datepicker" placeholder="Birthday" name="birthday" type="text">
    </div>
    <div class="form-group">
        <input class="form-input form-control datepicker" placeholder="Graduation Year" name="gradyear" type="text">
    </div>
    <input type="hidden" name="lid" value="$lid"/>
    <button type="submit" class="btn">Submit</button>
</form>
#end