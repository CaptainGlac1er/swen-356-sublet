#parse("velocity/Layout.vm")
#@mainLayout()

<div class="form-container">
    <h3 class="form-title">Create a new Listing</h3>
    <form class="listing-form" action='' method="post">
        <div class="form-group">
            <input class="form-input" placeholder="Address" id="address" name="address" class="form-control" type="text">
        </div>
        <div class="form-group">
            <input class="form-input" placeholder="Rent" id="rent" name="rent" class="form-control" type="text">
        </div>
        <select class="form-group" id="payment" name="payment" class="form-control" type="text">
            #foreach($pay in $payment)
                <option class="form-group" class="form-control" value=$pay>$pay.getTo_str()</option>
            #end
        </select>
        <select class="form-group" id="gender" name="gender" class="form-control" type="text">
            #foreach($gend in $gender)
                <option class="form-group" class="form-control" value=${gend}>$gend.getTo_str()</option>
            #end
        </select>
        <select class="form-group" id="housing" name="housing" class="form-control" type="text">
            #foreach($house in $housing)
                <option class="form-group" class="form-control" value=$house>$house.getTo_str()</option>
            #end
        </select>
        <select class="form-group" id="furnished" name="furnished" class="form-control" type="text">
            #foreach($furn in $furnished)
                <option class="form-group" class="form-control" value=$furn>$furn.getTo_str()</option>
            #end
        </select>

##        <div class="form-group">
##            <input class="form-input" placeholder="Housing Type" id="htype" name="rent" class="form-control" type="text">
##        </div>
##        <div class="form-group">
##            <input class="form-input" placeholder="Furnished?" id="is_furnished" name="rent" class="form-control" type="text">
##        </div>
        <div class="form-group">
            <textarea class="form-input text-area" placeholder="Description" id="dis" name="dis" class="form-control" type="text"></textarea>
        </div>
        <button type="submit" class="btn">Submit</button>
    </form>

    <script>
        $('body').find('.link').removeClass('active');
        $('.listings-new-link').addClass('active');
    </script>
</div>

#end