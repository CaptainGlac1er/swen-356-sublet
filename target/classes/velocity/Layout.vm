#macro(mainLayout)
<!doctype html>
<html>
    <header>
        <title>sublet 356 test</title>
        <style>
            *{
               padding: 0;
               margin: 0;
               font-family: "Trebuchet MS", Helvetica, sans-serif;
            }
            body{
                background-color: ;
                display: grid;
                grid-auto-columns: 1fr;
                grid-template-rows: 1fr 6fr;
            }
            .header{
                z-index: 1000;
                overflow: hidden;
                position: fixed;
                top: 0;
                left: 0;
                height: 50px;
                width: 100%;

                background-color: rgba(255,255,255,.5);
                display: grid;
                grid-template-columns: 2fr 3fr 1fr 2fr;
                grid-column-align: center;
                padding: 20px;
            }
                .listing{
                    /*-webkit-box-shadow: 11px 15px 98px -24px rgba(0,0,0,0.7);*/
                    /*-moz-box-shadow: 11px 15px 98px -24px rgba(0,0,0,0.7);*/
                    /*box-shadow: 11px 15px 98px -24px rgba(0,0,0,0.7);*/
                    padding-left: 15px;
                    border-radius: 20px;
                    display: grid;
                    grid-template-rows: 3fr 1fr 1fr;
                    grid-auto-columns: 1fr 3fr;
                    margin-bottom: 20px;
                    overflow: hidden;
                    background-color: rgb(255, 190, 118);
                    border: 5px solid rgb(255, 190, 118);

                }
                .listings{
                    margin-top: 50px;
                    width: 50%;
                    margin: 0 auto;


                    padding: 10px;
                    background-color: white;
                }
                .listing-text{
                    display: block;

                }
                .description-text{
                    grid-column: 2;
                    margin-left: 30px;
                    padding: 15px;
                    grid-row-start: 0;
                    grid-row-end: 1;
                    background-color: white;
                    height: 150%;
                }
                .rent-text{

                }
                .form-title{
                    display: block;

                }
                .form-container{
                    margin-top: 100px;
                    margin-left: 100px;
                    display: grid;
                    grid-template-rows: 1fr 7fr;
                }
                .form-group{
                    margin-bottom: 15px;
                }
                .form-input{
                    height: 50px;
                    width: 50vw;
                    border-radius: 10px;
                    border: 2px solid rgb(255, 190, 118);
                    overflow: scroll;
                    padding: 10px;
                    font-size: 18px;
                    color: #444444;
                }
                .form-input::placeholder{
                    font-size: 18px;
                    opacity: .5;
                    color: #444444;
                }
                .btn{
                    height: 50px;
                    margin: auto;
                    width: 50vw;
                    background-color: rgb(255, 190, 118);
                    border-radius: 10px;
                    border: 0;
                    font-size: 20px;
                    color: white;
                }
            .text-area{
                height: 150px;
                resize: none;
            }
        </style>
    </header>
    <body>
        <div class="header">
            <h1>Tiger Tenant</h1>
        </div>
        $bodyContent
    </body>
</html>
#end